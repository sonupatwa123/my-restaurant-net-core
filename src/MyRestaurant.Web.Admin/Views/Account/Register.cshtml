@using MyRestaurant.Web.Admin.Models;

@{
    ViewBag.Title = "SignUp Page";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="main-page signup-page">
    <div ng-app="account" ng-controller="accountController">
        <input type="hidden" id="Id" value="@ViewBag.Id" />
        <div class="clearfix"> </div>
        <h3 class="title1">SignUp Here</h3>
        <p class="creating">
           Please enter below required information to register with us !!
        </p>
        <div class="sign-up-row widget-shadow">
            <form name="register" novalidate id="Register" class="form-horizontal">
                <h5>Personal Information :</h5>
                <div class="sign-u">
                    <div class="sign-up1">
                        <h4>First Name* :</h4>
                    </div>
                    <div class="sign-up2">
                        <input required name="firstname" ng-model="RegisterModel.firstname" type="text">
                    </div>
                    <div class="clearfix"> </div>
                </div>
                <div class="sign-u">
                    <div class="sign-up1">
                        <h4>Last Name* :</h4>
                    </div>
                    <div class="sign-up2">

                        <input type="text" required name="lastname" ng-model="RegisterModel.lastname">

                    </div>
                    <div class="clearfix"> </div>
                </div>
                <div class="sign-u">
                    <div class="sign-up1">
                        <h4>Email Address* :</h4>
                    </div>
                    <div class="sign-up2">
                        <input type="email"  name="username" ng-model="RegisterModel.email" required>
                        <span class="red" ng-show="register.username.$error.email">email is not valid</span>
                    </div>
                    <div class="clearfix"> </div>
                </div>
                <h6>Login Information :</h6>
                <div class="sign-u" ng-if="!RegisterModel.id">
                    <div class="sign-up1">
                        <h4>Password* :</h4>
                    </div>
                    <div class="sign-up2">
                        <input required ng-minlength="6" ng-maxlength="10" ng-model="RegisterModel.password" name="password" type="password">
                        <span class="red" ng-show="register.password.$error.minlength">password should be minimum of 6 characters</span>
                        <span class="red" ng-show="register.password.$error.maxlength">password should be maximum of 10 characters</span>
                    </div>
                    <div class="clearfix"> </div>
                </div>
                <div class="sign-u" ng-if="!RegisterModel.id">
                    <div class="sign-up1">
                        <h4>Confirm Password* :</h4>
                    </div>
                    <div class="sign-up2">

                        <input type="password" ng-pattern="RegisterModel.password" ng-minlength="6" ng-maxlength="10" name="confirmpassword" ng-model="RegisterModel.confirmpassword" required>
                        <span class="red" ng-show="register.confirmpassword.$error.minlength">password should be minimum of 6 characters</span>
                        <span class="red" ng-show="register.confirmpassword.$error.maxlength">password should be maximum of 10 characters</span>
                        <span class="red" ng-show="register.confirmpassword.$error.pattern">password is not matching</span>
                    </div>
                    <div class="clearfix"> </div>
                </div>
                <div class="sub_home">

                    <input ng-disabled="!register.$valid" type="submit" ng-click="save()" value="Submit">
                    <input type="submit" ng-click="cancel()" value="Cancel">
                    <div class="clearfix"> </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/Scripts/app.js"></script>
<script src="~/Scripts/notify.js"></script>
<script src="~/Scripts/app/model/Account.Models.js"></script>
<script src="~/Scripts/app/services/account.service.js"></script>
<script src="~/Scripts/app/controller/account.cnt.js"></script>